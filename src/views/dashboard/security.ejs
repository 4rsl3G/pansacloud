<div class="max-w-4xl mx-auto p-6">
  <h1 class="text-2xl font-bold">Security</h1>

  <div class="grid md:grid-cols-2 gap-4 mt-6">
    <div class="card rounded-2xl p-5">
      <div class="font-semibold">Change Password</div>
      <input id="oldPw" type="password" class="w-full mt-3 rounded-xl bg-slate-900/60 border border-slate-700 p-3" placeholder="Old password">
      <input id="newPw" type="password" class="w-full mt-2 rounded-xl bg-slate-900/60 border border-slate-700 p-3" placeholder="New password">
      <button id="btnPw" class="mt-3 rounded-xl bg-sky-500 hover:bg-sky-400 px-4 py-2">Update</button>
    </div>

    <div class="card rounded-2xl p-5">
      <div class="font-semibold"><%= pinSet ? "Change PIN" : "Set PIN" %></div>
      <% if(pinSet){ %>
        <input id="curPin" type="password" class="w-full mt-3 rounded-xl bg-slate-900/60 border border-slate-700 p-3" placeholder="Current PIN">
        <input id="newPin" type="password" class="w-full mt-2 rounded-xl bg-slate-900/60 border border-slate-700 p-3" placeholder="New PIN">
        <button id="btnPinChange" class="mt-3 rounded-xl bg-emerald-500 hover:bg-emerald-400 px-4 py-2">Update PIN</button>
      <% } else { %>
        <input id="setPin" type="password" class="w-full mt-3 rounded-xl bg-slate-900/60 border border-slate-700 p-3" placeholder="PIN 4-10 digit">
        <button id="btnPinSet" class="mt-3 rounded-xl bg-emerald-500 hover:bg-emerald-400 px-4 py-2">Set PIN</button>
      <% } %>
    </div>
  </div>
</div>
