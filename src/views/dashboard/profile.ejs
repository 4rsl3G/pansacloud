<div class="max-w-4xl mx-auto p-6">
  <h1 class="text-2xl font-bold">Profile</h1>
  <div class="card rounded-2xl p-5 mt-6 space-y-3">
    <input id="name" class="w-full rounded-xl bg-slate-900/60 border border-slate-700 p-3" value="<%= u.name %>" placeholder="Name">
    <input id="phone" class="w-full rounded-xl bg-slate-900/60 border border-slate-700 p-3" value="<%= u.phone_e164 %>" placeholder="62812...">
    <input class="w-full rounded-xl bg-slate-900/30 border border-slate-700 p-3" value="<%= u.email %>" disabled>
    <button id="btnSaveProfile" class="rounded-xl bg-emerald-500 hover:bg-emerald-400 px-4 py-2">
      <i class="ri-save-3-line"></i> Save
    </button>
  </div>
</div>
