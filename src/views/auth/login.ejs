<div class="min-h-screen flex items-center justify-center p-6">
  <div class="card w-full max-w-md rounded-2xl p-6 shadow-xl">
    <h1 class="text-2xl font-bold">Login</h1>
    <p class="text-slate-300 mt-1">Masuk ke PansaCloud</p>

    <div class="mt-6 space-y-3">
      <input id="email" class="w-full rounded-xl bg-slate-900/60 border border-slate-700 p-3" placeholder="Email">
      <input id="password" type="password" class="w-full rounded-xl bg-slate-900/60 border border-slate-700 p-3" placeholder="Password">
      <button id="btnLogin" class="w-full rounded-xl bg-sky-500 hover:bg-sky-400 transition p-3 font-semibold">
        Login
      </button>
      <a href="/register" class="block text-center text-slate-300 hover:text-white">Register</a>
    </div>
  </div>
</div>

<script>
$("#btnLogin").on("click", async ()=>{
  const email=$("#email").val().trim();
  const password=$("#password").val();
  const r = await $.ajax({ url:"/api/login", method:"POST", contentType:"application/json", data: JSON.stringify({ email, password })});
  if(!r.ok) return toastr.error(r.msg);
  toastr.success(r.msg);
  location.href=r.redirect;
});
</script>
